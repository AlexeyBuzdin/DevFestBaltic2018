@charset 'utf-8'

// *********
// VARIABLES
// *********

// Colors
purpy = #9C26B0
pinkerton = #FF4081
pinky = #FFC6D5
poopy = #ACA19A
reddy = #D0021B

// CSS Reset
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video
  margin: 0
  padding: 0
  border: 0
  font-size: 100%
  font: inherit
  vertical-align: baseline
// HTML5 display-role reset for older browsers
article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section
  display: block
body
  line-height: 1
ol
ul
  list-style: none
blockquote
q
  quotes: none
blockquote:before
blockquote:after
q:before
q:after
  content: ''
  content: none
table
  border-collapse: collapse
  border-spacing: 0
a
  text-decoration: none


// Everybody get propper modern box-sizing
*
  box-sizing: border-box

// Resetting inputs and buttons styles to prevent browsers override
button
input
  padding: 0
  margin: 0
  -webkit-appearance none
  appearance none
  outline none
  box-shadow none
  text-shadow none
  border none
  border-radius 0
  &:active
  &:focus
  &:hover
    appearance none
    outline none
    box-shadow none
    text-shadow none
    border none
    border-radius 0
img
  padding 0
  margin 0
  outline none
  border none

// Let's make <BODY> look better
body
  margin 0
  padding: 0
  position: relative
  z-index: 0
  width 100%
  min-height 100%
  height auto
  background-color purpy
  font-family: -apple-system, Arial, sans-serif
  font-size 18px
  line-height: 1.6
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-rendering: optimizeLegibility
  -webkit-font-feature-settings: 'liga', 'kern'
  -moz-font-feature-settings: 'liga', 'kern'

// Prevent <BODY> from scrolling when modal is opened
.body-no-scroll
  // position: fixed
  overflow: hidden
  // width 100%
  // height: 100%

// Page wrapper
.page-wrapper
  display block
  width: 100%
  max-width 1440px
  min-width: 320px
  height auto
  min-height 100vh
  margin: 0 auto
  padding: 0
  overflow: hidden
  position: relative


@import typography
@import header
@import footer


// PRIZE SECTION
.prize-disclaimer
  display: block
  width 100%
  max-width 1176px
  height auto
  margin 0 auto
  padding 122px 12px 0
  @media (max-width 767px)
    padding 118px 12px 0

.prize-info-block
  display: block
  width 100%
  max-width 870px
  height auto
  margin 0
  padding 17px 80px 16px 0
  background-color transparent
  background-image url('../img/icons/mountain-icon.svg')
  background-size 61px auto
  background-position 100% 0
  background-repeat no-repeat
  @media (max-width 767px)
    padding 78px 0 16px
    background-position: 0 0

.prize-info-block__title
  display block
  width 100%
  height auto
  margin 0 0 8px
  font-family monorobot
  font-size 20px
  font-weight 700
  line-height 26px
  color pinky
  @media (max-width 767px)
    font-size 18px
    font-weight: 500

.prize-info-block__text
  display block
  width 100%
  height auto
  margin 0 0 8px
  font-family monorobot
  font-size 12px
  font-weight 400
  line-height 18px
  color pinky


// NOMINATION SECTION
.nomination-section
  display block
  width 100%
  max-width 1176px
  height auto
  margin 0 auto
  padding 51px 12px 48px
  @media (max-width 479px)
    max-width 292px


.votes-counter
  display: block
  width auto
  padding 0 3px
  font-family monorobot
  font-size 20px
  font-weight 700
  line-height 26px
  color pinky
  opacity 0.7
  & span
    &:after
      content: '\000a0'


// LEADERS BLOCK
.leaders-block
  display block
  margin 65px 0 0

.leaders-block__title
  display: block
  width auto
  padding 0 3px
  font-family monorobot
  font-size 20px
  font-weight 700
  line-height 26px
  color pinky


// LEADING APPS
.leading-apps
  display: flex
  flex-direction row
  flex-wrap nowrap
  flex-flow row nowrap
  align-items flex-start
  align-content flex-start
  justify-content: flex-start
  width 100%
  height auto
  margin 0
  padding 14px 0 38px
  @media (min-width 480px) and (max-width 767px)
    flex-wrap wrap
    flex-flow row wrap
  @media (max-width 479px)
    display: block
    padding 14px 12px 38px


// APP CARD
.app-card
  display: block
  width calc(25% - 18px)
  flex-basis calc(25% - 18px)
  margin 0 24px 0 0
  padding 56px 10px 33px
  border 4px solid rgba(255,198,213,0.2)
  &:nth-child(4n)
    margin 0
  @media (min-width 768px) and (max-width 1023px)
    width calc(25% - 9px)
    flex-basis calc(25% - 9px)
    margin 0 12px 0 0
  @media (min-width 480px) and (max-width 767px)
    width calc(50% - 6px)
    flex-basis calc(50% - 6px)
    margin 0 12px 12px 0
    &:nth-child(2n)
      margin 0 0 12px
  @media (max-width 479px)
    width 100%
    max-width 300px
    margin 0 auto 20px

.app-card__icon
  display: block
  width 115px
  height 115px
  margin 0 auto 19px
  overflow hidden
  & img
    display block
    width 100%
    height auto
    max-height 100%
    margin 0
    padding 0
    border none 
    outline none

.app-modal-content__app-links .app-card__icon
  margin 0 auto 22px

.app-card__name
  display: block
  width auto
  margin 0 auto
  padding 0
  font-family monorobot
  font-size 18px
  font-weight 500
  line-height 24px
  color pinky
  opacity 0.5
  text-align center
  & span 
    &:before
      content '\00040'

.app-card__votes
  display: block
  width auto
  margin 0 auto
  padding 0
  font-family monorobot
  font-size 18px
  font-weight 500
  line-height 24px
  color pinky
  opacity 0.5
  text-align center
  & span
    &:after
      content: '\000a0'

.app-card__engage-button
  display: block
  width 150px
  height 45px
  margin 30px auto 0
  padding 0 10px
  border 3px solid pinky
  font-family monorobot
  font-size 18px
  font-weight 500
  line-height 39px
  color pinky
  text-align: center
  cursor pointer
  transition all .27s ease
  &:hover
  &:focus
    background-color #ffffff
    color purpy


.app-card__engage-button_your-choice
  background-color #ffffff
  color purpy


// VIEW ALL LINK
.view-all-link
  display: inline-block
  width auto
  height 24px
  margin 0
  padding 0 0 0 22px
  background-color transparent
  background-image url('../img/icons/arrow-right-pink.svg')
  background-repeat no-repeat
  background-size 15px auto
  background-position 0 4px
  font-family monorobot
  font-size 18px
  font-weight 500
  line-height 24px
  color pinky
  text-decoration underline
  &:hover
  &:focus
    color #fff
  & span 
    &:before
      content '\000a0'
    &:after
      content '\000a0'


// ******************
// VISIBILITY CLASSES
// ******************

// Visible on mobile
@media (min-width: 768px)
  .visible-on-mobile
    display: none
// Hidden on mobile
@media (max-width: 767px)
  .hidden-on-mobile
    display: none